pipeline {
    agent any
    environment {
        PATH = "/opt/maven/bin:$PATH"
    }
    stages {
        stage('git') {
            steps {
                git credentialsId: 'git-creds', url: 'https://github.com/bkaarthic/hello-world.git'
            }
        }
        stage('build') {
            steps {
                sh "mvn clean install -D.maven.test.skip=true"
            }
        }
        stage('unit test') {
            steps {
                sh "mvn surefire-report:report"
            }
        }
  }
}
